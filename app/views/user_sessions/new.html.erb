<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 my-5">
      <h1 class="text-center">
        <span class="border-bottom border-3 border-dark pb-1"><%= t '.title' %></span>
      </h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group my-3">
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group my-3">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="actions text-center my-3">
          <%= f.submit t('defaults.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class='text-center my-3'>
        <div>
          <%= link_to t('.to_register_page'), new_user_path %>
        </div>
        <div>
          <%= link_to t('.password_forget'), '#' %>
        </div>
      </div>
    </div>
  </div>
</div>
