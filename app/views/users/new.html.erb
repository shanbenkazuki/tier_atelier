<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 my-5">
      <h1 class="text-center">
        <span class="border-bottom border-3 border-dark pb-1"><%= t '.title' %></span>
      </h1>
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group my-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group my-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group my-3">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group my-3">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="actions text-center my-3">
          <%= f.submit t('.register'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class='text-center my-3'>
        <%= link_to t('.to_login_page'), login_path %>
      </div>
    </div>
  </div>
</div>