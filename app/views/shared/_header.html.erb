<div class="sticky-top shadow-sm" style="background-color: #eda368;">
  <div class="container">
    <header>
      <nav class="navbar navbar-expand">
        <div class="logo_area">
          <%= link_to root_path, class: 'navbar-brand' do %>
            <%= image_tag 'header_logo.webp', class: "img-fluid", height: '50px' %>
          <% end %>
        </div>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to t('defaults.create_tier'), new_tier_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to t('defaults.template'), templates_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to t('defaults.tier'), tiers_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <% if current_user %>
                <%= link_to t('defaults.account'), user_path(current_user), class: 'nav-link text-light' %>
              <% else %>
                <%= link_to t('defaults.login'), login_path, id: 'login', class: 'btn btn-warning btn-sm text-light mt-1' %>
              <% end %>
            </li>
          </ul>
        </div>
      </nav>
    </header>
  </div>
</div>
