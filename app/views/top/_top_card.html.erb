<div class="col-md-6 d-flex mt-2 scale-on-hover">
  <%= link_to path, class: "text-decoration-none w-100" do %>
    <div class="card cursor-pointer h-100">
      <div class="card-body d-flex align-items-center justify-content-center" style="height: 180px;">
        <%= image_tag image, class: "mw-100 mh-100" %>
      </div>
      <div class="card-footer h-100">
        <p class="card-title fw-bold"><%= title %></p>
        <p class="card-text text-muted"><%= description %></p>
      </div>
    </div>
  <% end %>
</div>
